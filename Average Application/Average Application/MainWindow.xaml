        <Button x:Name="Clear_button" Content="Clear" FontSize="18" HorizontalAlignment="Left" Margin="400,288,0,0" Click="Clear_button_Click" VerticalAlignment="Top" Width="114" Height="29" FontWeight="Bold"/>
        <Button x:Name="Exit_button" Click="Exit_button_Click" Content="Exit" FontSize="18" HorizontalAlignment="Left" Margin="400,346,0,0" VerticalAlignment="Top" Width="114" Height="29" FontWeight="Bold"/>
        <Label x:Name="Average_Label" Content="Average" FontSize="20" BorderThickness="3px" HorizontalAlignment="Left" Margin="139,215,0,0" VerticalAlignment="Top" Height="44" Width="128" FontWeight="Bold"/>
        <TextBox x:Name="Average_textBox" HorizontalAlignment="Left" BorderThickness="3px" FontSize="20" Height="44" Margin="333,215,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="205" FontWeight="Bold" RenderTransformOrigin="0.49,0.255"/>
        <Label x:Name="label" Content="&#xA;&#xA;    This is an Average &#xA;     &#xA;         caclculation&#xA;            &#xA;           Application" HorizontalAlignment="Left" Margin="576,34,0,0" VerticalAlignment="Top" Height="187" Width="206" FontWeight="Bold" FontSize="18"/>

    </Grid>
